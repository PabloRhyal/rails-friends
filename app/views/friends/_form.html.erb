<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    
    <%= form.text_field :first_name, class: "form-control", placeholder: "Name of your friend" %>
  </div>

  <div class="field mb-3"">
    
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last name of your friend" %>
  </div>

  <div class="field mb-3"">
    
    <%= form.text_field :email, class: "form-control", placeholder: "His or her email!" %>
  </div>

  <div class="field mb-3"">
    
    <%= form.text_field :phone, class: "form-control", placeholder: "Does he or she have a phone?" %>
  </div>

  <div class="field mb-3">
    
    <%= form.text_field :twitter, class: "form-control", placeholder: "Twitter account maybe?"  %>
  </div>

  <div class="field mb-3">
    
    <%= form.number_field :user_id, id: :friend_user_id, class: "form-control", value: current_user.id, type: "hidden" %>
  </div>


</br>
  <div class="actions">
    <%= form.submit class: "btn btn-outline-dark" %>
  </div>
<% end %>
