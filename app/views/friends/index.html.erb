<% if user_signed_in?%>
<h1>Friend List</h1>


<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %> 
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>

        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
      <% end %>
      


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-outline-secondary" %>
<% else %>
<h1>Home world!</h1>
      This is my first Rails Webpage...
        PROBANDO VISUAL STUDIO
  <% end %>